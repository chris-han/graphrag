{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Launch Embedding Proxy",
            "type": "shell",
            "command": "poetry",
            "args": [
                "run",                
                "python",
                "${workspaceFolder}/embedding_proxy.py",
                "--port", "11435",
                "--host", "http://localhost:11434"
            ],
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Launch Gradio App",
            "type": "shell",
            "command": "poetry",
            "args": [
                "run",
                "poe",                
                "index"
            ],
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Launch All Services",
            "dependsOn": [
                "Launch Embedding Proxy",
                "Launch Gradio App"
            ],
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ]
}